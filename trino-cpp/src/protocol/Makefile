.PHONY: trino_protocol trino_protocol-json trino_protocol-cpp

OS := $(shell uname)
ifeq ($(OS),Darwin)
  SEDCMD := "gsed"
else
  SEDCMD := "sed"
endif

trino_protocol: trino_protocol-cpp

trino_protocol-cpp: trino_protocol-json
	echo "// DO NOT EDIT : This file is generated by java-to-struct-json" > trino_protocol.cpp
	chevron -d trino_protocol.json trino_protocol-json-cpp.mustache >> trino_protocol.cpp
	echo "// DO NOT EDIT : This file is generated by java-to-struct-json" > trino_protocol.h
	chevron -d trino_protocol.json trino_protocol-json-hpp.mustache >> trino_protocol.h
	$(SEDCMD) -i 's/Mock//gI' trino_protocol.*
	clang-format -style=file -i trino_protocol.h trino_protocol.cpp

trino_protocol-json: 
	./java-to-struct-json.py special/*.java special/*.inc  -j | jq . > trino_protocol.json

trino_protocol.proto: trino_protocol-json
	pystache trino_protocol-protobuf.mustache trino_protocol.json > trino_protocol.proto
